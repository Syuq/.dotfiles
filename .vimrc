execute pathogen#infect()
syntax on
filetype plugin indent on

" Leader
let mapleader = " "

let g:netrw_browse_split = 0
let g:netrw_banner = 0
let g:netrw_winsize = 25

" Numbers
set relativenumber
set number

set foldmethod=manual

" Copy to clipboard
set clipboard=unnamed

" set colorcolumn=80

nnoremap <CR> G
nnoremap <BS> gg
